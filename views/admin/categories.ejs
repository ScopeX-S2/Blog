<%- include('../partials/header.ejs') %>
<head><link rel="stylesheet" href="../../CSS3/categories.css"><title>Category</title></head>
<body>
    <%- include('../partials/menu.ejs') %>
   <main>
       <a href="/category/new"><button class="criar">Criar</button></a>
    <table>
        <tr>
          <th style="width: 5%;">ID</th>
          <th style="width: 20%;">TITLE</th>
          <th style="width: 20%;">SLUG</th>
          <th style="width: 10%;">ACTION</th>
        </tr>
        <% category.forEach(category => { %>
            <tbody>
                <tr style="text-align: center;">
                    <td class="text-center align-middle"><%= category.id %></td>

                      <td class="text-center align-middle"><%= category.title %></td>

                      <td class="text-center align-middle"><%= category.slug %></td>

                    <td style="display: flex; flex-wrap: wrap; text-align: center; margin: auto;">
                          <form action="/category/delete" method="POST">
                              <input type="hidden" name="id" value="<%= category.id %>">
                              <button class="btn-action">Delete</button>
                          </form>
                          <form action="/category/edit" method="POST">
                              <input type="hidden" name="id" value="<%= category.id %>">
                              <button class="btn-action">Edit</button>
                          </form>
                    </td>
                  </tr>
            </tbody>
        <% }) %>
      </table>
   </main>
</body>
<%- include('../partials/footer.ejs') %>